{% extends 'layout.html.twig' %}

{% block content %}
    <div class="form">
        <form id="main-form">
            <div class="form__row">
                <label>Site URL:</label>
                <input type="text" name="url"/>
                <div class="form__row__error"></div>
            </div>
            <div class="form__row">
                <label>Seach type:</label>
                <div class="form__row__item">
                    <label>
                        <input type="radio" name="type" value="links" checked/>links
                    </label>
                </div>
                <div class="form__row__item">
                    <label>
                        <input type="radio" name="type" value="images"/>images
                    </label>
                </div>
                <div class="form__row__item">
                    <label>
                        <input type="radio" name="type" value="text"/>text
                    </label>
                </div>
                <div class="form__row__error"></div>
            </div>
            <div class="form__row" style="display:none">
                <label>Text to search:</label>
                <input type="text" name="text"/>
                <div class="form__row__error"></div>
            </div>
            <button type="submit">Submit</button>
        </form>
    </div>
    <div id="main-result" style="display:none">Everything went OK. You can view the result <a href="/url/list" target="_blank">here</a></div>
{% endblock %}